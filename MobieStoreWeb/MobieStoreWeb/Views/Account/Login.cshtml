@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section id="form" style="margin-top: 0;">
    <!--form-->
    <div class="container">
        <div class="row">
            <div style="width: 50%; text-align: center; " class="col-lg-6 col-md-6">
                <img src="/img/team-2.png" style="max-width:100%; max-height:100%;margin: 7em 17em;">
            </div>
            <div class="col-md-6">
                <div class="login-form" style=" padding: 5.5rem;">
                    <!--login form-->
                    <h2 style="font-size: 40px; text-align: center;">Login to your account</h2>
                    <div class="text-danger" asp-validation-summary="All"></div>

                    <form asp-action="Login" method="post" style="margin-bottom: 20px;">
                        <input name="returnUrl" type="hidden" value="@ViewBag.ReturnUrl" />
                        <input asp-for="Email" style="margin-bottom: 2em;" />
                        <input asp-for="Password" />
                        <span style=" line-height: 25px; font-size: 18px;">
                            <input asp-for="RememberMe" class="checkbox">
                            Keep me signed in
                        </span>
                        <button style=" padding: 6px 25px; font-size: 18px;" type="submit" class="btn btn-default">Login</button>
                    </form>
                    <a style="font-size: 18px" asp-action="Register" class="text-center">Bạn chưa có tài khoản ??</a>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
