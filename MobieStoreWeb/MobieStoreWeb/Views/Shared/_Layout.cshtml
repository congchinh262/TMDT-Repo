<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - MobieStoreWeb</title>
    <link href="~/static/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/static/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/static/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/static/css/price-range.css" rel="stylesheet">
    <link href="~/static/css/animate.css" rel="stylesheet">
    <link href="~/static/css/main.css" rel="stylesheet">
    <link href="~/static/css/responsive.css" rel="stylesheet">
    <link href="~/static/css/site.css" rel="stylesheet">



    <link rel="stylesheet" href="~/css/404.css">
    <link rel="stylesheet" href="~/css/about.css">
    <link rel="stylesheet" href="~/css/contact.css">
    <link rel="stylesheet" href="~/css/checkout.css">
    <link rel="stylesheet" href="~/css/converse.css">
    <link rel="stylesheet" href="~/css/detail.css">
    <link rel="stylesheet" href="~/css/Home.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://kit.fontawesome.com/dd3bcb13d3.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <!--[if lt IE 9]>
    <script src="~/static/js/html5shiv.js"></script>
    <script src="~/static/js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="~/static/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/static/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/static/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/static/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/static/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>
    <header id="header">
        <!--header-->
        <div class="header_top">
            <!--header_top-->
            <div class="header-bar">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-md-7 top1">
                            <div class="header__top__left">
                                <p>Free shipping, 30-day return or refund guarantee.</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-5 top2">
                            <div class="header__top__right">
                                <div class="header__top__links">
                                    <partial name="_LoginPartial" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/header_top-->

        <div class="header-middle">
            <!--header-middle-->
            <div class="nav navbar-expand-lg slider">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="header-logo">
                                <a class="navbar-logo logo" href="#">
                                    <img src="/img/logo1.png" />
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <nav class="header-menu">
                                <ul class="navbar-nav">
                                    <li class="nav-item item1">
                                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="nav-item nav1">
                                        <a class="nav-link" asp-controller="Products" asp-action="Index">Shoes</a>
                                    </li>

                                </ul>
                            </nav>
                        </div>
                        <div class="col-lg-5">
                            <div class="header-option">
                                <ul>
                                    <li>
                                        <form asp-controller="Products" asp-action="Index" method="get">
                                            <input style="display: inherit;" type="search" name="search" placeholder="Search" onkeypress="if (event.keyCode == 13) {$(event).closest('form').submit()}" />
                                        </form>
                                    </li>
                                    <li class="cart-bar">
                                        <a style=" font-size: 30px;" asp-controller="Cart" asp-action="Index"><i class="fa fa-shopping-cart cart-btn"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
           
            </div>
        </div>
        <!--/header-middle-->


    </header><!--/header-->
    @RenderBody()
    <footer class="footer">
        <div class="container">
            <div class="row footer1">
                <div class="col-md-3 col1">
                    <div class="footer_about">
                        <div class="footer-logo">
                            <a href="#">
                                <img src="img/logo.png" />
                            </a>
                        </div>
                        <p>
                            The customer is at the heart of our unique business model, which includes design.
                        </p>
                        <a href="#">
                            <img src="img/payment.png" />
                        </a>
                    </div>
                </div>
                <div class="col-md-3 col2">
                    <p>Shopping</p>
                    <ul>
                        <li>
                            <a class="footer-link" href="#">Clothing Store</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Trending Shoes</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Accessories</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Sale</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col3">
                    <p>Shopping</p>
                    <ul>
                        <li>
                            <a class="footer-link" href="#">Contact Us</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Payment Methods</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Delivary</a>
                        </li>
                        <li>
                            <a class="footer-link" href="#">Return & Exchanges</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 col4">
                    <p>Newletter</p>
                    <div class="footer-newletter">
                        <p>Be the first to know about new arrivals, look books, sales promos!</p>
                        <form>
                            <input class="newletter-input" type="text" placeholder="Your email">
                            <button type="submit">
                                <span><i class="far fa-envelope"></i></span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer><!--/Footer-->



    <script src="~/static/js/jquery.js"></script>
    <script src="~/static/js/bootstrap.min.js"></script>
    <script src="~/static/js/jquery.scrollUp.min.js"></script>
    <script src="~/static/js/price-range.js"></script>
    <script src="~/static/js/jquery.prettyPhoto.js"></script>
    <script src="~/static/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>