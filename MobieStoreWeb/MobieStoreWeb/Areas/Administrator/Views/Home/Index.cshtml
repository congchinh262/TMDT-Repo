<div class="row">
    <!-- Area Chart -->
    <div class="col-12">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Earnings Overview</h6>

                <div>
                    <button id="btn-start-rmc" type="button" disabled class="btn btn-success">
                        Start
                    </button>
                    <button id="btn-stop-rmc" type="button" class="btn btn-danger">
                        Stop
                    </button>
                </div>
            </div>
            <div class="card-body">
                <form id="rmc-filter">
                    <div class="form-group">
                        @{
                            IEnumerable<SelectListItem> listItems = ViewBag.PaymentStatuses;
                            var index = 1;
                        }
                        @foreach (var item in listItems)
                        {
                            <div class="custom-control custom-checkbox">
                                <input name="paymentStatuses" type="checkbox" class="custom-control-input" id="payment-status-@index" value="@item.Value">
                                <label class="custom-control-label" for="payment-status-@index">@item.Text</label>
                            </div>
                            index++;
                        }
                    </div>

                    <div class="form-group">
                        <label class="control-label">To Date</label>
                        <input name="toDate" type="date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Prev Months</label>
                        <input name="prevMonthCount" type="number" min="1" max="24" step="1" class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input name="withCurrentMonth" type="checkbox" class="custom-control-input" id="with-current-month" checked>
                            <label class="custom-control-label" for="with-current-month">with current month</label>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Card Body -->
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="revenueMonthsChart"></canvas>
                </div>
            </div>
            <div class="card-footer">
                Last update: <span id="revenueMonthsChartTime"></span>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <!-- Page level plugins -->
    <script src="~/admin_assets/vendor/chart.js/Chart.min.js"></script>
    <script src="~/admin_assets/js/demo/chart-bar-demo.js"></script>
    <script>
        // Set new default font family and font color to mimic Bootstrap's default styling
        Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
        Chart.defaults.global.defaultFontColor = '#858796';

        function number_format(number, decimals, dec_point, thousands_sep) {
            // *     example: number_format(1234.56, 2, ',', ' ');
            // *     return: '1 234,56'
            number = (number + '').replace(',', '').replace(' ', '');
            var n = !isFinite(+number) ? 0 : +number,
                prec = !isFinite(+decimals) ? 0 : Math.abs(decimals),
                sep = (typeof thousands_sep === 'undefined') ? ',' : thousands_sep,
                dec = (typeof dec_point === 'undefined') ? '.' : dec_point,
                s = '',
                toFixedFix = function (n, prec) {
                    var k = Math.pow(10, prec);
                    return '' + Math.round(n * k) / k;
                };
            // Fix for IE parseFloat(0.55).toFixed(0) = 0;
            s = (prec ? toFixedFix(n, prec) : '' + Math.round(n)).split('.');
            if (s[0].length > 3) {
                s[0] = s[0].replace(/\B(?=(?:\d{3})+(?!\d))/g, sep);
            }
            if ((s[1] || '').length < prec) {
                s[1] = s[1] || '';
                s[1] += new Array(prec - s[1].length + 1).join('0');
            }
            return s.join(dec);
        }

        var context = document.getElementById('revenueMonthsChart');
        console.log(context); // test
        var revenueMonthsChart = new Chart(context, {
            type: 'bar',
            data: {
                labels: ["January", "February", "March", "April", "May", "June"],
                datasets: [{
                    label: "Revenue",
                    backgroundColor: "#4e73df",
                    hoverBackgroundColor: "#2e59d9",
                    borderColor: "#4e73df",
                    data: Array(6).fill(0),
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        left: 10,
                        right: 25,
                        top: 25,
                        bottom: 0
                    }
                },
                scales: {
                    xAxes: [{
                        time: {
                            unit: 'month'
                        },
                        gridLines: {
                            display: false,
                            drawBorder: false
                        },
                        maxBarThickness: 25,
                    }],
                    yAxes: [{
                        ticks: {
                            min: 0,
                            maxTicksLimit: 5,
                            padding: 10,
                            // Include a dollar sign in the ticks
                            callback: function (value, index, values) {
                                return '$' + number_format(value);
                            }
                        },
                        gridLines: {
                            color: "rgb(234, 236, 244)",
                            zeroLineColor: "rgb(234, 236, 244)",
                            drawBorder: false,
                            borderDash: [2],
                            zeroLineBorderDash: [2]
                        }
                    }],
                },
                legend: {
                    display: false
                },
                tooltips: {
                    titleMarginBottom: 10,
                    titleFontColor: '#6e707e',
                    titleFontSize: 14,
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                    callbacks: {
                        label: function (tooltipItem, chart) {
                            var datasetLabel = chart.datasets[tooltipItem.datasetIndex].label || '';
                            return datasetLabel + ': $' + number_format(tooltipItem.yLabel);
                        }
                    }
                },
            }
        });

        console.log(revenueMonthsChart); // test
        function addData(chart, label, data) {
            chart.data.labels.push(label);
            chart.data.datasets.forEach((dataset) => {
                dataset.data.push(data);
            });
            chart.update();
        }

        function removeData(chart) {
            chart.data.labels.pop();
            chart.data.datasets.forEach((dataset) => {
                dataset.data.pop();
            });
            chart.update();
        }
    </script>

    <script async defer>
        var globalLoopTime = 3000;
        var intervalIds = {};

        $(document).ready(function () {
            fetchRevenueMonthsChart();
            startIntervals(globalLoopTime);
        })

        $('#btn-start-rmc').click(function (event) {
            startInterval('revenueMonthsChart', () => fetchRevenueMonthsChart(), globalLoopTime);
            $('#btn-start-rmc').attr('disabled', 'disabled');
            $('#btn-stop-rmc').removeAttr('disabled');
        });

        $('#btn-stop-rmc').click(function (event) {
            stopInterval('revenueMonthsChart');
            $('#btn-start-rmc').removeAttr('disabled');
            $('#btn-stop-rmc').attr('disabled', 'disabled');
        });

        function startIntervals(loopTime) {
            intervalIds['revenueMonthsChart'] = setInterval(() => fetchRevenueMonthsChart(), loopTime);
        }

        function stopIntervals() {
            for (var key in intervalIds) {
                clearInterval(intervalIds[key]);
            }
        }

        function startInterval(key, callback, loopTime) {
            intervalIds[key] = setInterval(callback, loopTime);
        }

        function stopInterval(key) {
            clearInterval(intervalIds[key]);
        }

        function fetchRevenueMonthsChart() {
            var form = $("#rmc-filter");
            var query = {
                "paymentStatuses": form.find('input[name="paymentStatuses"]:checked').serializeArray().map(obj => obj.value),
                "toDate": form.find('input[name="toDate"]').val(),
                "prevMonthCount": form.find('input[name="prevMonthCount"]').val(),
                "withCurrentMonth": form.find('input[name="withCurrentMonth"]').is(':checked'),
            };
            console.log(query);
            $.ajax({
                type: "Get",
                url: "/Administrator/Home/GetRevenueMonths",
                data: query,
                contentType: "application/json",
                dataType: "json",
                traditional: true
            }).done(function (data) {
                console.log(data);
                var chartLabelLength = revenueMonthsChart.data.labels.length;
                for (var i = 0; i < chartLabelLength; i++) {
                    removeData(revenueMonthsChart);
                }

                var year = 0;
                var date = new Date();
                data.forEach(item => {
                    var month = new Date(date.setMonth(item.month - 1)).toLocaleString('default', { month: 'long' });
                    var label = year !== item.year ? [month, item.year] : month;
                    year = item.year;
                    addData(revenueMonthsChart, label, item.revenue);
                });

                $('#revenueMonthsChartTime').text(new Date().toLocaleString());
            }).fail(function (err) {
                console.error(err);
            })
        }
    </script>
}